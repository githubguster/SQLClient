# SQLClient
=========
apt install libboost-dev

# mysql 
=========
apt install libmysqlclient-dev 

# postgresql
=========
apt install libpq-dev postgresql-server-dev-all

# sqlite
apt install libsqlite3-dev

# sqlserver
apt install msodbcsql17 unixodbc-dev

